<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/m3_navigation_item_horizontal_padding"
    android:paddingVertical="@dimen/m3_navigation_item_vertical_padding">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/design_menu_item_icon"
        android:layout_width="@dimen/mtrl_navigation_item_icon_size"
        android:layout_height="@dimen/mtrl_navigation_item_icon_size"
        android:layout_marginEnd="@dimen/m3_navigation_item_icon_padding"
        app:tint="@color/m3_navigation_item_icon_tint"/>
    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="@color/m3_navigation_item_text_color"
        android:id="@+id/design_menu_item_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|start"
        android:maxLines="1"/>
</androidx.appcompat.widget.LinearLayoutCompat>
